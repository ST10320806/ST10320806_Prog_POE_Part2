@model IEnumerable<Prog_POE_Part2.Models.ClaimTb>

@{
    ViewData["Title"] = "Track Claims";
}

<body style="text-align: center; background-color: beige; font-family: Arial, sans-serif;">
    <div class="container mt-5">
        <h1 class="mb-4">Track Claims</h1>

        <!--Code for the table design and values-->
        <table class="table table-bordered table-striped" style="background-color: white;">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Lecturer ID</th>
                    <th>Status</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Submission Date</th>
                    <th>Additional Notes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimId</td>
                        <td>@claim.LecturerId</td>
                        
                        <td>
                            <!--Code for displaying status of various claims-->
                            @switch (claim.Status)
                            {
                                case "Pending":
                                    <span class="badge badge-warning text-black">Pending</span>
                                    break;
                                case "Approved":
                                    <span class="badge badge-success text-black">Approved</span>
                                    break;
                                case "Rejected":
                                    <span class="badge badge-danger text-black">Rejected</span>
                                    break;
                                default:
                                    <span class="badge badge-secondary text-black">@claim.Status</span>
                                    break;
                            }
                        </td>
                        <!--Getting values from the ClaimTb table-->
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate.ToString("C")</td>
                        <td>@claim.Amount.ToString("C")</td>
                        <td>@claim.SubmissionDate.ToShortDateString()</td>
                        <td>@claim.ClaimNotes</td>
                    </tr>
                }
            </tbody>
        </table>
        <!-- Button to return home -->
        <a asp-controller="Home" asp-action="Index" class="btn btn-info">Return to home page</a>
    </div>
</body>

