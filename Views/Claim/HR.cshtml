@model IEnumerable<Prog_POE_Part2.Models.ClaimTb>

<body style="background-color: beige">
    <div style=" border-radius: 15px; opacity: 5; text-align: center; margin: auto;">
        <div class="container">
            <h2>Approved Claims Invoice Summary</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Hours Worked</th>
                        <th>Hourly Rate</th>
                        <th>Total Amount</th>
                        <th>Submission Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.ClaimId</td>
                            <td>@claim.HoursWorked</td>
                            <td>@claim.HourlyRate.ToString("C2")</td>
                            <td>@claim.Amount.ToString("C2")</td>
                            <td>@claim.SubmissionDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="mt-3">
                <strong>Total Claims: @Model.Count</strong>
                <strong>Total Payout: @Model.Sum(c => c.Amount).ToString("C2")</strong>
            </div>
        </div>
</div>
</body>