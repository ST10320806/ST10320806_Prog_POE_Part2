@model Prog_POE_Part2.Models.LecturerTb

@{
    ViewData["Title"] = "Submit Claim";
}

<h2>Submit Claim</h2>
<body style ="text-align: center; background-color: beige; font-family: Arial, sans-serif;">
    <div style="border: 2px solid grey; padding: 20px; margin: auto; display: inline-block; text-align: left; background-color:cornsilk; border-radius: 15px; max-width: 400px;">
<form asp-action="SubmitClaim" method="post">
    <div class="form-group">
        <label asp-for="HoursWorked"></label>
        <input asp-for="HoursWorked" class="form-control" id="HoursWorked" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" class="form-control" id="HourlyRate" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CalculatedAmount">Calculated Amount:</label>
        <input type="text" id="CalculatedAmount" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ClaimNotes"></label>
        <textarea asp-for="ClaimNotes" class="form-control"></textarea>
        <span asp-validation-for="ClaimNotes" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
</div>
</body>

<!-- JavaScript code making use of JQuery to automatically calculate total amount during input -->
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!--JQuery library which needs to be included if not run locally--><!--Corrections made by ClaudeAi, also provided the link to the library-->
    <script>
        $(document).ready(function () {
            $('#HoursWorked, #HourlyRate').on('input', function () {
                // Getting the values from the user input
                let hoursWorked = parseFloat($('#HoursWorked').val()) || 0;
                let hourlyRate = parseFloat($('#HourlyRate').val()) || 0;

                // Calculate the total amount
                let totalAmount = hoursWorked * hourlyRate;

                // Updating the total amount field
                $('#CalculatedAmount').val(totalAmount.toFixed(2));
            });
        });
    </script>
}


